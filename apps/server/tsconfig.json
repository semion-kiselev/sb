{
  "compilerOptions": {
    "lib": ["es2023"],
    "module": "esnext",
    "target": "esnext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "rootDir": "./src",
    "outDir": "./dist",
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "baseUrl": "src"
  },
  "include": ["src/**/*"]
}
