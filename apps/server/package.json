{
  "name": "server",
  "version": "1.0.0",
  "description": "",
  "type": "module",
  "scripts": {
    "migrate": "tsx src/db/migrate.ts",
    "admin:create": "tsx --env-file=.env src/db/create-admin.ts",
    "dev": "tsx watch --env-file=.env src/app/server.ts",
    "build": "swc src -d dist",
    "serve": "node --env-file=.env dist/src/app/server.js",
    "ts": "tsc --noEmit",
    "format": "prettier 'src/**/*.{ts,json}' --check",
    "format:fix": "prettier 'src/**/*.{ts,json}' --write",
    "lint": "eslint 'src/**/*.{ts,json}'",
    "lint:fix": "eslint 'src/**/*.{ts,json}' --fix",
    "test": "jest --runInBand",
    "prepare": "husky"
  },
  "author": "Siamion Kisialiou",
  "license": "ISC",
  "dependencies": {
    "@repo/dto": "workspace:*",
    "@hono/node-server": "1.11.1",
    "bcrypt": "5.1.1",
    "better-sqlite3": "11.5.0",
    "hono": "4.4.0",
    "http-status-codes": "2.3.0"
  },
  "devDependencies": {
    "@eslint/js": "9.2.0",
    "@swc/cli": "0.3.12",
    "@swc/core": "1.5.7",
    "@swc/jest": "0.2.37",
    "@types/bcrypt": "5.0.2",
    "@types/better-sqlite3": "7.6.11",
    "@types/jest": "29.5.14",
    "@types/node": "20.12.10",
    "eslint": "8.57.0",
    "eslint-config-prettier": "9.1.0",
    "globals": "15.1.0",
    "jest": "29.7.0",
    "prettier": "3.2.5",
    "prettier-plugin-organize-imports": "3.2.4",
    "tsx": "4.9.3",
    "typescript": "5.4.5",
    "typescript-eslint": "7.8.0",
    "zod": "3.23.8"
  }
}
